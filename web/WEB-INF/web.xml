<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>SaveServlet</servlet-name>
        <servlet-class>servlet.SaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveServlet</servlet-name>
        <url-pattern>/save/user</url-pattern>
        <url-pattern>/save/doctor</url-pattern>
        <url-pattern>/save/doctor_availability</url-pattern>
        <url-pattern>/save/patient</url-pattern>
        <url-pattern>/save/patient_allergy</url-pattern>
    </servlet-mapping>
</web-app>
